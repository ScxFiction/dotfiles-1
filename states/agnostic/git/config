[user]
  name = David McKay
  email = david.andrew.mckay@gmail.com

[gpg]
  program = gpg2

[core]
  autocrlf = input
  whitespace = trailing-space,space-before-tab
  editor = code --wait

[commit]
  gpgsign = true

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto

[push]
  default = current

[pull]
  default = current

[alias]
  pull = pull --ff-only
  cm = commit -v
  co = checkout
  pl = pull --ff-only
  ps = push
  st = status
  cane = commit --amend --no-edit
  prune = fetch --prune
  log = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  clean-branches = "!git co master && git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

[branch]
  autosetuprebase = always

[rerere]
  enabled = true

[diff]
  algorithm = minimal
  compactionHeuristic = true
  renames = copies
  tool = default-difftool

[difftool "default-difftool"]
    cmd = code --wait --diff $LOCAL $REMOTE

[advice]
  statusHints = false
